{% extends 'base.html.twig' %}

{% block title %}Keyboard{% endblock %}

{% block body %}
    <h1>Keyboard</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ keyboard.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ keyboard.name }}</td>
        </tr>
        <tr>
            <th>Brand</th>
            <td>{{ keyboard.brand }}</td>
        </tr>
        <tr>
            <th>SwitchType</th>
            <td>{{ keyboard.switchType }}</td>
        </tr>
        <tr>
            <th>KeycapSet</th>
            <td>{{ keyboard.keycapSet }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ keyboard.description }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('app_keyboard_index') }}">back to list</a>

    {% if keyboard.getShowcases|length > 0 %}
        {% for showcase in keyboard.getShowcases %}
            <a href="{{ path('app_showcase_show', {'id': showcase.id}) }}" class="btn btn-secondary">
                ← Retour à la Showcase : {{ showcase.name }}
            </a>
        {% endfor %}
    {% else %}
        <p>Aucune showcase associée</p>
    {% endif %}

    <a href="{{ path('app_keyboard_edit', {'id': keyboard.id}) }}">edit</a>

    {{ include('keyboard/_delete_form.html.twig') }}
{% endblock %}
