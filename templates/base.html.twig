<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{% block title %}MyKeyboards{% endblock %}</title>

    {% block stylesheets %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    {% endblock %}
</head>
<body>
{# --- DÉBUT DE LA NAVBAR --- #}
<nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
    <div class="container px-4 px-lg-5">
        {# Lien vers l'accueil (souvent la liste des inventaires) #}
        <a class="navbar-brand fw-bold" href="{{ path('inventory_list') }}">MyKeyboards</a>

        {# Bouton pour le menu mobile (Hamburger) #}
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            {# --- GAUCHE : MENU PRINCIPAL --- #}
            <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('inventory_list') }}">Tout l'inventaire</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_showcase_index') }}">Galeries Publiques</a>
                </li>
                <li class="nav-item">
                    {# Ce lien ne marchera que si tu as fait "make:crud Member" #}
                    <a class="nav-link" href="{{ path('app_member_index') }}">Liste des Utilisateurs</a>
                </li>
            </ul>

            {# --- DROITE : LOGIN / LOGOUT / PERSO --- #}
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                {% if app.user %}
                    {# SI CONNECTÉ #}
                    <li class="nav-item d-flex align-items-center">
                        <span class="nav-link text-muted small me-2">Connecté en tant que <b>{{ app.user.email }}</b></span>
                    </li>

                    <li class="nav-item">
                        {# TODO: Nous allons créer cette route 'app_my_inventory' juste après #}
                        <a class="btn btn-outline-primary btn-sm mx-2" href="{{ path('app_keyboard_index') }}">
                            <i class="bi bi-keyboard"></i> Mes Claviers
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-danger" href="{{ path('app_logout') }}">Déconnexion</a>
                    </li>
                {% else %}
                    {# SI VISITEUR #}
                    <li class="nav-item">
                        <a class="nav-link btn btn-primary text-white px-3" href="{{ path('app_login') }}">Se connecter</a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>
{# --- FIN DE LA NAVBAR --- #}

<div class="container mt-5">
    {# Affichage des messages flash (Succès/Erreur) #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}

    {% block body %}{% endblock %}
</div>

<footer class="py-5 bg-dark mt-auto">
    <div class="container"><p class="m-0 text-center text-white">Copyright &copy; MyKeyboards Projet PHP 2025</p></div>
</footer>

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}
</body>
</html>